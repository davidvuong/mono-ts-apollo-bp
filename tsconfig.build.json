{
  "compilerOptions": {
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "module": "CommonJs",
    "lib": ["ES2019"],
    "target": "ES2020",
    "sourceMap": true,
    "allowJs": true,
    "noEmitOnError": true
  }
}
